{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 优先匹配真实文件（如图片、视频）
    { "src": "/videos/(.*)", "dest": "/videos/$1" },
    { "src": "/(.*\\.(png|jpg|mp4))", "dest": "/$1" },
    // 其他所有请求返回 index.html（支持前端路由）
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
